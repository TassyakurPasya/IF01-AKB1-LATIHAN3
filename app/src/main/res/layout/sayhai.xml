<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".sayhai">

    <TextView
        android:id="@+id/satu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Beres! Sekarang"
        android:layout_marginTop="40dp"
        android:textSize="30dp"
        android:layout_marginLeft="20dp"
        android:textColor="@color/black3"
        android:fontFamily="@font/rubik_regular"
        />
    <TextView
        android:id="@+id/dua"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="kamu"
        android:layout_marginTop="40dp"
        android:textSize="30dp"
        android:layout_marginLeft="250dp"
        android:textColor="@color/black3"
        android:fontFamily="@font/rubik_regular"
        />
    <TextView
        android:id="@+id/tiga"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="udah bisa ngecek"
        android:layout_below="@+id/satu"
        android:layout_marginTop="10dp"
        android:textSize="30dp"
        android:layout_marginLeft="20dp"
        android:textColor="@color/black3"
        android:fontFamily="@font/rubik_regular"
        />
    <TextView
        android:id="@+id/empat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="penggunaan HP mu"
        android:layout_below="@+id/tiga"
        android:layout_marginTop="10dp"
        android:textSize="30dp"
        android:layout_marginLeft="20dp"
        android:textColor="@color/black3"
        android:fontFamily="@font/rubik_regular"
        />
    <TextView
        android:id="@+id/lima"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="tiap hari buat bantu"
        android:layout_below="@+id/empat"
        android:layout_marginTop="10dp"
        android:textSize="30dp"
        android:layout_marginLeft="20dp"
        android:textColor="@color/black3"
        android:fontFamily="@font/rubik_regular"
        />
    <TextView
        android:id="@+id/enam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="kamu"
        android:layout_below="@+id/empat"
        android:layout_marginTop="10dp"
        android:textSize="30dp"
        android:layout_marginLeft="300dp"
        android:textColor="@color/black3"
        android:fontFamily="@font/rubik_regular"
        />
    <TextView
        android:id="@+id/tujuh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ngatur waktu :)"
        android:layout_below="@+id/enam"
        android:layout_marginTop="10dp"
        android:textSize="30dp"
        android:layout_marginLeft="20dp"
        android:textColor="@color/black3"
        android:fontFamily="@font/rubik_regular"
        />
    <Button
        android:id="@+id/bttn2"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bttnkuning"
        android:layout_below="@id/tujuh"
        android:layout_marginTop="380dp"
        android:layout_centerHorizontal="true"
        android:text="Oke"
        android:textSize="20dp"
        android:fontFamily="@font/nunito_bold"
        android:textStyle="bold"
        android:textColor="@color/black3"
        />
</RelativeLayout>