<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/gambar"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/ic_get_start_timitory"
        />
    <TextView
        android:id="@+id/tessatu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Monitory Membantu Anda"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="360dp"
        android:textSize="20dp"
        android:fontFamily="@font/nunito_bold"
        android:textColor="@color/black3"
        />
    <TextView
        android:id="@+id/dua"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mengintrol HP Anak"
        android:layout_below="@+id/tessatu"
        android:layout_centerHorizontal="true"
        android:textSize="20dp"
        android:fontFamily="@font/nunito_bold"
        android:textColor="@color/black3"
        />
    <RelativeLayout
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="130dp"

        >
    <Button
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bttnkuning"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        android:text="Mulai"
        android:textSize="20dp"
        android:fontFamily="@font/nunito_bold"
        android:textStyle="bold"
        android:textColor="@color/black3"
        android:onClick="Kode"
        />
    </RelativeLayout>
</RelativeLayout>
